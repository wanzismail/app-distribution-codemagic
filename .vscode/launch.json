    "version": "0.2.0",
    "configurations": [
        {
            "name": "App Staging Debug",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_staging.dart",
            "args": [
                "--flavor", "staging",
                "--target", "lib/main_staging.dart",
            ]
        },
        {
            "name": "App Production Debug",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "args": [
                "--flavor", "production", 
                "--target", "lib/main_production.dart",
            ]
        },
        {
            "name": "App Staging Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main_staging.dart",
            "args": [
                "--flavor", "staging", 
                "--target", "lib/main_staging.dart",
            ]
        },
        {
            "name": "App Production Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "lib/main_production.dart",
            "args": [
                "--flavor", "production", 
            ],
        },
    ]
}